class Solution {
public:
    int findTheWinner(int n, int k) {
        //çº¦ç‘Ÿå¤«ç¯éœ€è¦ä»0å¼€å§‹ç¼–å·ï¼Œè¿™æ ·æ‰èƒ½è¿ç»­
        //è¿­ä»£å…¬å¼ä¸ºf(n,k)=(f(n-1,k)+k)%n
        //è¾¹ç•Œæ¡ä»¶ä¸ºf(1,k)=0
        int index=0;
        for(int i=2;i<=n;i++)
        {
            index=(index+k)%i;
        }
        //çº¦ç‘Ÿå¤«ç¯ç¼–å·ä¸å®é™…ç¼–å·ç›¸å·®1
        return index+1;
    }
};
