class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        //æš´åŠ›ç®—æ³•çš„æ—¶é—´å¤æ‚åº¦ä¸ºO(n^2),æ˜¾ç„¶æ— æ³•é€šè¿‡
        //é‡‡ç”¨åŒæŒ‡é’ˆleftå’Œright:è‹¥[left,right]ä¸­å…ƒç´ çš„ä¹˜ç§¯å°äºk,åˆ™rightæŒ‡é’ˆå‘å³éå†ç›´åˆ°ä¹˜ç§¯å¤§äºç­‰äºk;å¦åˆ™leftæŒ‡é’ˆå‘å³éå†ç›´åˆ°ä¹˜ç§¯å°äºk.
        int left=0,right=0;
        int multip=1;
        int count=0;
        while(right<nums.size())
        {
            if(nums[right]>=k)
            {
                right++;
                left=right;
                multip=1;
            }
            else
            {
                multip*=nums[right];
                if(multip<k)
                {
                    right++;
                    count+=right-left;
                }
                else
                {
                    while(multip>=k)
                    {
                        multip/=nums[left];
                        left++;
                    }
                    multip/=nums[right];
                }
            }
        }
        return count;
    }
};
