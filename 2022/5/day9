class Solution {
public:
    vector<int> diStringMatch(string s) {
        //[0,n]ä¸­çš„æ¯ä¸ªæ•´æ•°å¯ä»¥ä½¿ç”¨ä¸€æ¬¡
        //å‡è®¾perm[0]ä¸º0(è™½ç„¶æœ€åä¸ä¸€å®šæ˜¯0),è®°å½•perm[0]~perm[i](i:0~n)çš„æœ€å¤§å€¼maxå’Œæœ€å°å€¼min.å¯¹äºperm[i+1],å¦‚æœs[i]æ˜¯'I',perm[i+1]å°±å–max+1,å¹¶æ›´æ–°max;å¦‚æœs[i]æ˜¯'D',perm[i+1]å°±å–min-1,å¹¶æ›´æ–°min.æ˜¾ç„¶permæ•°ç»„å–åˆ°äº†åŒºé—´[min,max]ä¸­çš„æ‰€æœ‰æ•°,ä¸”max-min=n.æ˜¾ç„¶åŒºé—´[min,max]å¯ä»¥æ˜ å°„åˆ°åŒºé—´[0,n],ä¸¤è€…ä¹‹é—´åªå·®ä¸€ä¸ªåå·®å€¼.æ ¹æ®minå’Œ0è®¡ç®—ä¸€ä¸ªåå·®å€¼,ç”¨åå·®å€¼å¯¹permæ•°ç»„è¿›è¡Œä¿®æ­£.
        int n=s.length();
        vector<int>perm(n+1,0);
        int min=0,max=0;
        for(int i=0;i<n;i++)
        {
            if(s[i]=='I')
            {
                perm[i+1]=++max;
            }
            else
            {
                perm[i+1]=--min;
            }
        }
        int diff=-min;
        for(int i=0;i<n+1;i++)
        {
            perm[i]+=diff;
        }
        return perm;
    }
};
